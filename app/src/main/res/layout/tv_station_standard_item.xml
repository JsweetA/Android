<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingTop="20dp"
    android:paddingEnd="15dp">

    <RelativeLayout
        android:id="@+id/coverArea"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:id="@+id/tvImgCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/img_loading" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/time_length_border"
            android:orientation="horizontal"
            android:paddingStart="2.5dp"
            android:paddingEnd="2.5dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_play_tv" />

            <TextView
                android:id="@+id/tvTimeLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="12:34"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="纪念辛亥革命110周年大会举行 习近平发表重要讲话（实况）"
        android:layout_toLeftOf="@id/coverArea"
        android:layout_alignTop="@id/coverArea"
        android:layout_marginEnd="15dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvAuthorDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="中央广播电视总台 2021-10-09"
        android:layout_toLeftOf="@id/coverArea"
        android:layout_alignBottom="@id/coverArea"
        android:layout_marginEnd="15dp"
        android:textSize="13sp"
        android:singleLine="true"
        android:ellipsize="end"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="#efefef"
        android:layout_below="@id/tvAuthorDate"
        android:contentDescription="分割线" />

</RelativeLayout>