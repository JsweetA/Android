<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".activity_problem_3">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp">
        <ImageView android:id="@+id/fanh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/shan"
            android:layout_marginTop="14dp"/>

        <Button
            android:layout_width="74dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:background="#B99E83"
            android:onClick="next1"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        style="@style/shadow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <View android:id="@+id/xian1"
                android:layout_width="3dp"
                android:layout_height="22dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:background="#B99E83"/>
            <TextView android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填空题"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/xian1"
                android:layout_alignBottom="@+id/xian1"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/text1"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold" />
            <TextView android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/3"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/text"
                android:textColor="#A4A5A9"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"/>
            <View android:id="@+id/xian2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="45dp"
                android:background="#F0F0F0"/>

            <TextView
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xian2"
                android:layout_alignLeft="@+id/xian1"
                android:layout_alignRight="@+id/text1"
                android:layout_marginTop="25dp"
                android:text="2016年10月，中共中央办公厅、国务院办公厅印发《关于完善农村土地所有权承包权经营权分置办法的意见》。”____  ____  ____  ____“是继承家庭联产承包责任制后农村改革的又一重大制度创新。"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/from4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main"
                android:layout_alignLeft="@+id/xian1"
                android:layout_alignRight="@+id/text1"
                android:layout_marginTop="25dp"
                android:textColor="#FF7D01" />
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from4"
                android:background="#E6F6EB"
                android:layout_alignLeft="@+id/xian1"
                android:layout_marginTop="25dp"
                android:text="出题：中国人民大学中共党史党建研究院"
                android:textColor="#18AA3F" />
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_alignRight="@+id/text1"
                android:layout_marginTop="20dp"
                android:text="查看提示"
                android:textSize="12dp"
                android:textColor="#B99E83"
                />
            <ImageView android:id="@+id/ts"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/tis"
                android:layout_toLeftOf="@id/text5"
                android:layout_alignBottom="@id/text5"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_below="@+id/ts"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>