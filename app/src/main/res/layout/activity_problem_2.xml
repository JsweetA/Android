<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".activity_problem_2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp">
        <ImageView android:id="@+id/fanh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/shan"
            android:layout_marginTop="14dp"/>

        <Button
            android:layout_width="74dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:background="#B99E83"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="next2"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        style="@style/shadow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <View android:id="@+id/xian1"
                android:layout_width="3dp"
                android:layout_height="22dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:background="#B99E83"/>
            <TextView android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择题"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/xian1"
                android:layout_alignBottom="@+id/xian1"/>
            <TextView android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold"
                android:textSize="35dp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/text1"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                android:text="/3"
                android:textColor="#A4A5A9"
                android:textSize="20dp" />
            <View android:id="@+id/xian2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="45dp"
                android:background="#F0F0F0"/>

            <TextView
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xian2"
                android:layout_alignLeft="@+id/xian1"
                android:layout_alignRight="@+id/text1"
                android:layout_marginTop="25dp"
                android:text="2005年12月29日，十届全国人大常委会第十九次会议决定，自2006年起废止《中华人民共和国______条例》。由此，一个在我国存在2600年的古老税种宣告终结。"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/from3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main"
                android:layout_alignLeft="@+id/xian1"
                android:layout_alignRight="@+id/text1"
                android:layout_marginTop="25dp"
                android:textColor="#FF7D01" />

            <RadioGroup android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from3"
                android:layout_alignLeft="@+id/xian1"
                android:layout_alignRight="@+id/text1"
                android:layout_marginTop="25dp"
                >
                <RadioButton
                    android:id="@+id/an1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FAFBFD"
                    android:text="A. 土地税"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/an2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FAFBFD"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/an1"
                    android:text="B. 农业税"
                    android:layout_alignLeft="@+id/xian1"
                    android:layout_alignRight="@+id/text1" />
            </RadioGroup>

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group"
                android:background="#E6F6EB"
                android:layout_alignLeft="@+id/xian1"
                android:layout_marginTop="25dp"
                android:text="出题：中国人民大学中共党史党建研究院"
                android:textColor="#18AA3F" />
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_alignRight="@+id/text1"
                android:layout_marginTop="20dp"
                android:text="查看提示"
                android:textSize="12dp"
                android:textColor="#B99E83"
                />
            <ImageView android:id="@+id/ts"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/tis"
                android:layout_toLeftOf="@id/text5"
                android:layout_alignBottom="@id/text5"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_below="@+id/ts"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>